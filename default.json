{
  "automerge": false,
  "rebaseWhen": "conflicted",
  "commitMessagePrefix": "chore(deps): ",
  "extends": [
    "config:best-practices",
    "group:recommended",
    "group:monorepos",
    "customManagers:biomeVersions",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions",
    "helpers:pinGitHubActionDigests",
    "npm:unpublishSafe",
    "packages:apollographql",
    "packages:linters",
    "packages:react",
    "packages:test",
    "packages:vite"
  ],
  "timezone": "Asia/Singapore",
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "auto",
    "schedule": ["* 0 */14 * *"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["minor"],
      "matchPackageNames": [
        "@vitejs/*",
        "@vitest/*",
        "coverage",
        "framer-motion",
        "lucide-react",
        "motion",
        "msw",
        "pnpm",
        "still-forest/renovate-config",
        "still-forest/biomejs-config",
        "tailwind-merge",
        "vitest*"
      ],
      "automerge": true
    },
    {
      "description": "Schedule patch updates every 2 weeks",
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "schedule": ["* 0 */14 * *"]
    },
    {
      "description": "Schedule minor updates every 4 weeks",
      "matchUpdateTypes": ["minor"],
      "schedule": ["* 0 */28 * *"]
    },
    {
      "description": "Schedule major updates every 2 months",
      "matchUpdateTypes": ["major"],
      "schedule": ["* 0 * */2 *"]
    },
    {
      "description": "Schedule Docker image updates every 4 weeks",
      "matchDatasources": ["docker"],
      "schedule": ["* 0 */28 * *"],
      "automerge": false
    },
    {
      "description": "Schedule Node.js updates every 4 weeks",
      "matchPackageNames": ["node", "nodejs", "@types/node"],
      "matchDatasources": ["node-version", "npm", "docker"],
      "schedule": ["* 0 */28 * *"],
      "automerge": false
    },
    {
      "groupName": "motion-dependencies",
      "matchPackageNames": ["framer-motion", "motion"],
      "automerge": false
    },
    {
      "description": "Automerge github actions",
      "matchDatasources": ["github-actions"],
      "matchPackageNames": ["codecov/codecov-action"],
      "automerge": true
    },
    {
      "description": "Automerge devDependencies",
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": [
        "@babel/*",
        "/eslint/",
        "prettier",
        "/testing/",
        "@types/*",
        "typescript*",
        "vitest"
      ],
      "automerge": true
    }
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10
}
